<div class="page-header">
  <div class="pull-right">
    <%= link_to "Create Resident", new_resident_path, class: 'btn btn-primary' %>
  </div>
  <center>
    <h1>Residents of GlassHouse</h1>
    </center>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Tower</th>
      <th>Unit</th>
      <th>Role</th>
      <th>Full Name</th>
      <th>Telephone</th>
      <th>Email</th>
    </tr>
  </thead>
  <tbody>
    <% @residents.each do |resident| %>
    <tr>
      <% if resident.tower != false %>
      <td>South</td>
      <% else %>
      <td>North</td>
      <% end %>
      <td><%= resident.unit %></td>
      <td><%= resident.role %></td>
      <td><%= resident.fullname %></td>
      <td><%= resident.telephone %></td>
      <td><%= resident.email %></td>
      <td><%= link_to 'Edit', edit_resident_path(resident), class: 'btn btn-info' %></td>
      <td><%= link_to 'Delete', resident_path(resident), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger' %></td>
    </tr>
    <% end %>
  </tbody>
</table>
